{
  "root": true,
  "env": {
    "es2022": true,
    "node": true,
    "mocha": true
  },
  "extends": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "rules": {
        "indent": "off"
      }
    }
  ]
}
